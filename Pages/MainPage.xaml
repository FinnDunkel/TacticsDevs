<Page x:Class="WpfAppToolBar.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppToolBar.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="#FFF5F5F5">
        <!--Begrüßungsseite und Firmeninformationen-->

        <StackPanel Grid.Column="1" HorizontalAlignment="Center">

            <Label HorizontalAlignment="Center" Margin="0,10,0,20" Content="Herzlich Willkommen bei der Entscheidungshilfe für die Ermittlung eines Verfahrens" FontWeight="Bold"/>

            <Label>
                <Image HorizontalAlignment="Center" Width="500"  Source="/Bilder/UngerLogo.jpg" Stretch="Uniform" StretchDirection="Both" Margin="50,0,0,0"/>
            </Label>
            <Label  Margin="0,0,0,10" HorizontalAlignment="Center" Content="Ab 24 Tonnen rund um die Welt" FontWeight="Bold" FontSize="16">

            </Label>

        </StackPanel>

    </Grid>
</Page>
